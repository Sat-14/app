                                text_size: self.width, None
                                halign: 'left'
                                valign: 'middle'
                            ModernSwitch:
                                id: notification_switch
                                size_hint_x: None
                                width: self.size[0]

                    CardLayout: # Reminder Timing
                        orientation: 'vertical'
                        spacing: dp(10)
                        padding: dp(15)

                        Label:
                            text: 'Reminder Timing'
