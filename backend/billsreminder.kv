    font_size: sp(16)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.2 # Light border
        Line:
            width: 1.2
            rounded_rectangle: (self.x, self.y, self.width, self.height, dp(8))

<CardLayout>: # Adjusting for glassy background
    orientation: 'vertical'
    padding: dp(15)
    spacing: dp(10)
    size_hint_y: None
    height: self.minimum_height
